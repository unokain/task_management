<h3 class="mt-5 pt-5 text-center">ブログ詳細画面</h3>
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 mt-2">
        <p>タイトル: <%= @task.task_name %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-2">
        <p>詳細: <%= @task.details %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-2">
        <p>終了期限: <%=@task.limit%></p>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-2">
        <p>ステータス:<%=@task.status%></p>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-2">
        <p>優先順位:<%=@task.priority%></p>
      </div>
    </div>
        <div class="row">
      <div class="col-12 mt-2">
        <p>作成者:<%=@task.user.name%></p>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-2">
        <%= link_to '編集', edit_task_path(@task) %> |
        <%= link_to '戻る', tasks_path %>
      </div>
    </div>
  </div>
  
  
  




